        color: #fff;
        display: inline-flex;
        justify-content: center;
        overflow: hidden;
    }

    .c9k {
        order: 0;
    }

    .cc4 {
        background-color: #59ab6e;
        color: #fff;
        flex-shrink: 0;
        font-weight: 600 !important;
        font-size: 22px !important;
        line-height: 18px;
        padding: 3px 10px;
    }
