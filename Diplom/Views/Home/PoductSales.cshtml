@using System.Text.RegularExpressions
@using System.Text
@model IEnumerable<Diplom.Models.Product>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4">
            <div class="card mb-4 product-wap rounded-0">
                <div class="card rounded-0">
                    <img class="card-img rounded-0 img-fluid" src="~/img/@item.Image">
                    <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                        <ul class="list-unstyled">
                            <li><a class="btn btn-success text-white" href="shop-single.html"><i class="far fa-heart"></i></a></li>
                            <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="far fa-eye"></i></a></li>
                            <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="fas fa-cart-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    @try
                    {
                        string Nothtml1 = @HttpUtility.UrlDecode(HttpUtility.UrlDecode(item.NameProduct, Encoding.UTF8));//"<html><head><title>Home Page</title></head><body>Welcome</body></html>";
                        Nothtml1 = Regex.Replace(Nothtml1, "<[^>]+>", string.Empty);
                        <div data-name="@Nothtml1">
                            <div>
                                @if (Nothtml1.Length > 26)
                                {
                                    if (item.NameProduct.Length > 26)
                                    {
                                        <a href="@Url.Action("Details", "Shop", new { id = item.id_Product })" class="h3 text-decoration-none" style="font-size:19px !important" title="@item.NameProduct">@Nothtml1.Remove(23, Nothtml1.Length - 26)...</a>

                                    }

                                }
                                else
                                {
                                    <a href="@Url.Action("Details", "Shop", new { id = item.id_Product })" class="h3 text-decoration-none" style="font-size:19px !important" title="@item.NameProduct">@Nothtml1</a>

                                }
                            </div>
                        </div>
                    }
                    catch
                    {

                    }
                    <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">

                        <li class="pt-2">
                            <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                        </li>
                    </ul>

                    <p class="text-center mb-0" style="font-size: 24px !important; font-weight: 500 !important; color: green ">@item.Price &#8381;</p>
                </div>
            </div>
        </div>

    }
</div>
